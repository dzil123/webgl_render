{
  "compilerOptions": {
    "lib": ["es2021", "dom"],
    "module": "es2022",
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    // "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "outDir": "dist/js",
    "sourceMap": true,
    "inlineSources": true
    // "preserveWatchOutput": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
